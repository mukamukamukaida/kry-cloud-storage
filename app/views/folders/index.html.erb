<h1>Folders</h1>
<%= link_to 'New Folder', new_folder_path %>

<ul>
  <% @folders.each do |folder| %>
    <li>
      <%= link_to folder.name, folder_path(folder) %>
      <%= link_to 'Edit', edit_folder_path(folder) %> |
      <%= link_to 'Delete', folder_path(folder), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
